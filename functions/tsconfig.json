
{
  "compilerOptions": {
    "target": "es2017",                   
    "module": "commonjs",                 
    "outDir": "lib",                      
    "rootDir": "src",                     
    "strict": true,                       
    "esModuleInterop": true,              
    "resolveJsonModule": true,            
    "sourceMap": true,                    
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,               
    "skipLibCheck": true                  
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
